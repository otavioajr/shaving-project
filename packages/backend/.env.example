# ==================================
# Supabase PostgreSQL Database
# ==================================

# Connection Pooler URL (Port 6543) - Use for runtime queries
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct Connection URL (Port 5432) - Use for Prisma migrations
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# ==================================
# Upstash Redis
# ==================================

# REST API URL (from Upstash console)
UPSTASH_REDIS_REST_URL="https://[YOUR-DATABASE].upstash.io"

# REST API Token (from Upstash console)
UPSTASH_REDIS_REST_TOKEN="[YOUR-TOKEN]"

# ==================================
# JWT Authentication
# ==================================

# Secret key for signing JWTs (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# Enable test-only OTP retrieval endpoint (never enable in production)
ENABLE_TEST_OTP_ENDPOINT="false"

# ==================================
# Web Push Notifications (VAPID)
# ==================================

# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="[YOUR-VAPID-PUBLIC-KEY]"
VAPID_PRIVATE_KEY="[YOUR-VAPID-PRIVATE-KEY]"
VAPID_SUBJECT="mailto:admin@yourdomain.com"

# ==================================
# Cron Jobs
# ==================================

# Secret to protect cron endpoints
CRON_SECRET="your-cron-secret-key"

# ==================================
# Application
# ==================================

# API base URL (for documentation and callbacks)
API_URL="http://localhost:3000"

# Environment (development | production | test)
NODE_ENV="development"

# Server port (local development only)
PORT="3000"
